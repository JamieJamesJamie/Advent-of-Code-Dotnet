{
   "tasks": [
      {
         "name": "Run dotnet format",
         "command": "dotnet",
         "args": [ "format", "--include", "${staged}" ],
         "include": [ "**/*.cs" ]
      },
      {
         "name": "Run csharpier",
         "command": "dotnet",
         "args": [ "csharpier", "${staged}" ],
         "include": [ "**/*.cs" ]
      }
   ]
}
