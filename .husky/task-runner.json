{
   "tasks": [
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": [
            "husky",
            "exec",
            ".husky/csx/commit-lint.csx",
            "--args",
            "${args}"
         ]
      },
      {
         "name": "Run dotnet format",
         "command": "dotnet",
         "args": [ "format", "--include", "${staged}" ],
         "include": [ "**/*.cs" ]
      },
      {
         "name": "Run csharpier",
         "command": "dotnet",
         "args": [ "csharpier", "${staged}" ],
         "include": [ "**/*.cs" ]
      }
   ]
}
